<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Produk Blog Views -->
        <record id="view_produk_blog_form" model="ir.ui.view">
            <field name="name">produk.blog.form</field>
            <field name="model">produk.blog</field>
            <field name="arch" type="xml">
                <form string="Kategori Produk">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nama Kategori Produk"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="subtitle"/>
                                <field name="technology_focus"/>
                                <field name="application_area"/>
                                <field name="scientific_field"/>
                            </group>
                            <group>
                                <field name="post_count"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_produk_blog_list" model="ir.ui.view">
            <field name="name">produk.blog.list</field>
            <field name="model">produk.blog</field>
            <field name="arch" type="xml">
                <list string="Kategori Produk">
                    <field name="name"/>
                    <field name="subtitle"/>
                    <field name="technology_focus"/>
                    <field name="application_area"/>
                    <field name="scientific_field"/>
                    <field name="post_count"/>
                </list>
            </field>
        </record>

        <!-- Produk Type Views -->
        <record id="view_produk_type_form" model="ir.ui.view">
            <field name="name">produk.type.form</field>
            <field name="model">produk.type</field>
            <field name="arch" type="xml">
                <form string="Jenis Produk">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_produk_type_list" model="ir.ui.view">
            <field name="name">produk.type.list</field>
            <field name="model">produk.type</field>
            <field name="arch" type="xml">
                <list string="Jenis Produk">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Technology Views -->
        <record id="view_produk_technology_form" model="ir.ui.view">
            <field name="name">produk.technology.form</field>
            <field name="model">produk.technology</field>
            <field name="arch" type="xml">
                <form string="Teknologi">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="category"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
                        <field name="description"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_produk_technology_list" model="ir.ui.view">
            <field name="name">produk.technology.list</field>
            <field name="model">produk.technology</field>
            <field name="arch" type="xml">
                <list string="Teknologi">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="category"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Produk Post Views -->
        <record id="view_produk_post_form" model="ir.ui.view">
            <field name="name">produk.post.form</field>
            <field name="model">produk.post</field>
            <field name="arch" type="xml">
                <form string="Produk Penelitian">
                    <header>
                        <field name="development_status" widget="statusbar" statusbar_visible="concept,prototype,testing,production,commercial"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nama Produk"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="principal_investigator"/>
                                <field name="blog_id"/>
                                <field name="produk_type_id"/>
                                <field name="trl_level"/>
                                <field name="development_status"/>
                                <field name="development_date"/>
                                <field name="is_published"/>
                                <field name="slug" readonly="1"/>
                            </group>
                            <group>
                                <field name="product_image" widget="image" class="oe_avatar" options="{'preview_image': 'product_image', 'size': [200, 200]}"/>
                            </group>
                        </group>
                        
                        <group string="Ringkasan">
                            <field name="teaser" nolabel="1" placeholder="Ringkasan singkat produk untuk preview di website..."/>
                        </group>
                        
                        <notebook>
                            <page string="Detail Produk">
                                <group>
                                    <group string="Tim &amp; Kolaborasi">
                                        <field name="team_members" placeholder="Daftar anggota tim (pisahkan dengan enter)"/>
                                        <field name="partner_institutions" placeholder="Institusi mitra"/>
                                        <field name="funding_source"/>
                                        <field name="target_market" placeholder="Deskripsi target pasar"/>
                                    </group>
                                    <group string="Teknologi &amp; Pasar">
                                        <field name="technology_ids" widget="many2many_tags"/>
                                        <field name="market_potential"/>
                                        <field name="competitive_advantage" placeholder="Keunggulan kompetitif"/>
                                        <field name="ip_status"/>
                                    </group>
                                </group>
                                <group string="Spesifikasi Teknis">
                                    <field name="technical_specs" nolabel="1" placeholder="Detail spesifikasi teknis produk..."/>
                                </group>
                            </page>
                            <page string="Deskripsi &amp; Konten">
                                <field name="content" placeholder="Deskripsi lengkap produk..."/>
                            </page>
                            <page string="Media &amp; Link">
                                <group>
                                    <group string="Foto &amp; Video">
                                        <field name="product_image" widget="image" options="{'size': [300, 300]}"/>
                                        <field name="demo_video_url" widget="url" placeholder="https://youtube.com/watch?v=..."/>
                                    </group>
                                    <group string="Link &amp; Kontak">
                                        <field name="product_url" widget="url" placeholder="https://website-produk.com"/>
                                        <field name="contact_email" widget="email"/>
                                        <field name="contact_phone" widget="phone"/>
                                        <field name="documentation_file" filename="documentation_filename"/>
                                        <field name="documentation_filename" invisible="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="SEO">
                                <group>
                                    <field name="meta_title" placeholder="Judul untuk SEO (akan menggunakan nama produk jika kosong)"/>
                                    <field name="meta_description" placeholder="Deskripsi untuk SEO (akan menggunakan ringkasan jika kosong)"/>
                                    <field name="meta_keywords" placeholder="Kata kunci SEO, pisahkan dengan koma"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_produk_post_list" model="ir.ui.view">
            <field name="name">produk.post.list</field>
            <field name="model">produk.post</field>
            <field name="arch" type="xml">
                <list string="Produk Penelitian" sample="1">
                    <field name="product_image" widget="image" options="{'size': [40, 40]}"/>
                    <field name="name"/>
                    <field name="principal_investigator"/>
                    <field name="produk_type_id"/>
                    <field name="blog_id"/>
                    <field name="trl_level"/>
                    <field name="development_status" decoration-success="development_status == 'commercial'" decoration-warning="development_status == 'production'" decoration-info="development_status in ['prototype','testing']" decoration-muted="development_status == 'concept'"/>
                    <field name="development_date"/>
                    <field name="market_potential"/>
                    <field name="is_published" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

