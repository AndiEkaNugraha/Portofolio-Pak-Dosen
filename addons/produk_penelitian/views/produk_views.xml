        <record id="view_produk_post_kanban" model="ir.ui.view">
            <field name="name">produk.post.kanban</field>
            <field name="model">produk.post</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="name"/>
                    <field name="principal_investigator"/>
                    <field name="development_status"/>
                    <field name="trl_level"/>
                    <field name="product_image"/>
                    <field name="teaser"/>
                    <templates>
                        <t t-name="card">
                            <div class="o_kanban_card d-flex flex-column">
                                <div class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary_left">
                                        <field name="principal_investigator"/>
                                    </div>
                                    <div class="o_kanban_primary_bottom">
                                        <field name="teaser"/>
                                    </div>
                                </div>
                                <div class="o_kanban_card_footer">
                                    <span class="badge text-bg-primary">
                                        <field name="development_status"/>
                                    </span>
                                    <span class="badge text-bg-info">
                                        TRL <field name="trl_level"/>
                                    </span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>