<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Main Menu -->
    <menuitem id="menu_mata_kuliah_root" name="Mata Kuliah" sequence="60"/>

    <!-- Academic Year Menu -->
    <record id="action_academic_year" model="ir.actions.act_window">
        <field name="name">Tahun Akademik</field>
        <field name="res_model">academic.year</field>
        <field name="view_mode">list,form</field>
        <field name="help">Kelola tahun akademik untuk mata kuliah</field>
    </record>

    <menuitem id="menu_academic_year" name="Tahun Akademik" parent="menu_mata_kuliah_root" 
              action="action_academic_year" sequence="15"/>
    <record id="action_mata_kuliah_post" model="ir.actions.act_window">
        <field name="name">Daftar Mata Kuliah</field>
        <field name="res_model">mata_kuliah.post</field>
        <field name="view_mode">list,form</field>
        <field name="help">Kelola dan lihat semua entri mata kuliah</field>
    </record>

    <menuitem id="menu_mata_kuliah_post" name="Daftar Mata Kuliah" parent="menu_mata_kuliah_root"
              action="action_mata_kuliah_post" sequence="10"/>

    <!-- Mata Kuliah Blog Menu -->
    <record id="action_mata_kuliah_blog" model="ir.actions.act_window">
        <field name="name">Kategori Mata Kuliah</field>
        <field name="res_model">mata_kuliah.blog</field>
        <field name="view_mode">list,form</field>
        <field name="help">Buat dan kelola kategori mata kuliah</field>
    </record>

    <menuitem id="menu_mata_kuliah_blog" name="Kategori" parent="menu_mata_kuliah_root"
              action="action_mata_kuliah_blog" sequence="20"/>

    <!-- Website Menu -->
    <record id="menu_mata_kuliah_website" model="website.menu">
        <field name="name">Mata Kuliah</field>
        <field name="url">/mata-kuliah</field>
        <field name="parent_id" ref="website.main_menu"/>
        <field name="sequence">60</field>
    </record>

</odoo>