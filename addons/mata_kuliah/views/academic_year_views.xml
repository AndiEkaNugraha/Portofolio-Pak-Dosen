<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Academic Year Views - Custom form view -->
    <record id="view_academic_year_form_custom" model="ir.ui.view">
        <field name="name">academic.year.form.custom</field>
        <field name="model">academic.year</field>
        <field name="arch" type="xml">
            <form string="Tahun Akademik">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="2023/2024" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Informasi Tahun Akademik">
                            <field name="start_year" required="1"/>
                            <field name="end_year" required="1"/>
                            <field name="is_active"/>
                            <field name="course_count" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Academic Year Tree View -->
    <record id="view_academic_year_tree" model="ir.ui.view">
        <field name="name">academic.year.tree</field>
        <field name="model">academic.year</field>
        <field name="arch" type="xml">
            <list string="Tahun Akademik">
                <field name="name"/>
                <field name="start_year"/>
                <field name="end_year"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="course_count"/>
            </list>
        </field>
    </record>

    <!-- Academic Year Actions -->
    <record id="action_academic_year" model="ir.actions.act_window">
        <field name="name">Tahun Akademik</field>
        <field name="res_model">academic.year</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_academic_year_tree"/>
    </record>

</odoo>