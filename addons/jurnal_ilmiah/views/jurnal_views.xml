<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Jurnal Blog Views - Custom form view -->
    <record id="view_jurnal_blog_form_custom" model="ir.ui.view">
        <field name="name">jurnal.blog.form.custom</field>
        <field name="model">jurnal.blog</field>
        <field name="arch" type="xml">
            <form string="Kategori Jurnal Ilmiah">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nama Kategori Jurnal..." required="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="subtitle" placeholder="Deskripsi singkat kategori..."/>
                    </group>
                    <group>
                        <group string="Informasi Kategori">
                            <field name="journal_scope" required="1"/>
                            <field name="accreditation_body"/>
                            <field name="post_count" readonly="1"/>
                        </group>
                        <group string="Status">
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Jurnal Post Views - Custom form view -->
    <record id="view_jurnal_post_form_custom" model="ir.ui.view">
        <field name="name">jurnal.post.form.custom</field>
        <field name="model">jurnal.post</field>
        <field name="arch" type="xml">
            <form string="Jurnal Ilmiah">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Judul Jurnal..." required="1"/>
                        </h1>
                        <field name="subtitle" placeholder="Sub Judul..."/>
                    </div>
                    
                    <group>
                        <group string="Informasi Dasar">
                            <field name="blog_id" required="1"/>
                            <field name="slug" placeholder="url-slug-artikel" 
                                   help="URL slug yang SEO-friendly. Kosongkan untuk generate otomatis dari judul. Hanya huruf kecil, angka, dan tanda hubung (-)"/>
                            <field name="authors" required="1"/>
                            <field name="corresponding_author"/>
                            <field name="journal_name" required="1"/>
                            <field name="publisher"/>
                            <field name="publication_date"/>
                            <field name="publisher_website"/>
                            <field name="website_published" string="Tampilkan di Website" help="Publikasikan artikel ini di website publik"/>
                        </group>
                        <group string="Status">
                            <field name="active" string="Status Aktif" help="Aktifkan/nonaktifkan record ini di sistem"/>
                            <field name="publication_year"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Konten" name="content">
                            <group>
                                <field name="teaser" string="Sinopsis" 
                                       placeholder="Ringkasan singkat artikel..."
                                       help="Ringkasan singkat artikel untuk preview"/>
                                <field name="content" string="Abstrak" widget="html" 
                                       help="Abstrak lengkap artikel jurnal"/>
                            </group>
                        </page>
                        
                        <page string="SEO &amp; Metadata" name="seo">
                            <group>
                                <group string="SEO">
                                    <field name="meta_title"/>
                                    <field name="meta_description" widget="text"/>
                                    <field name="meta_keywords"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Detail Publikasi" name="publication_details">
                            <group>
                                <group string="Publikasi">
                                    <field name="volume"/>
                                    <field name="issue"/>
                                    <field name="pages"/>
                                    <field name="doi"/>
                                    <field name="url"/>
                                </group>
                                <group string="Impact &amp; Metrics">
                                    <field name="impact_factor"/>
                                    <field name="h_index"/>
                                    <field name="quartile"/>
                                    <field name="citations"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Indexing" name="indexing">
                            <group>
                                <group string="Database Indexing">
                                    <field name="scopus_indexed"/>
                                    <field name="wos_indexed"/>
                                    <field name="sinta_indexed"/>
                                    <field name="sinta_rank" invisible="not sinta_indexed"/>
                                    <field name="doaj_indexed"/>
                                </group>
                                <group string="Subject Classification">
                                    <field name="subject_area"/>
                                    <field name="keywords"/>
                                    <field name="research_area"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree views -->
    <record id="view_jurnal_blog_tree" model="ir.ui.view">
        <field name="name">jurnal.blog.tree</field>
        <field name="model">jurnal.blog</field>
        <field name="arch" type="xml">
            <list string="Kategori Jurnal">
                <field name="name"/>
                <field name="journal_scope"/>
                <field name="accreditation_body"/>
                <field name="post_count"/>
            </list>
        </field>
    </record>

    <record id="view_jurnal_post_tree" model="ir.ui.view">
        <field name="name">jurnal.post.tree</field>
        <field name="model">jurnal.post</field>
        <field name="arch" type="xml">
            <list string="Entri Jurnal">
                <field name="name"/>
                <field name="slug" string="URL Slug"/>
                <field name="authors"/>
                <field name="journal_name"/>
                <field name="publication_date"/>
                <field name="website_published" string="Di Website" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_jurnal_blog" model="ir.actions.act_window">
        <field name="name">Kategori Jurnal</field>
        <field name="res_model">jurnal.blog</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_jurnal_blog_tree"/>
    </record>

    <record id="action_jurnal_post" model="ir.actions.act_window">
        <field name="name">Jurnal Ilmiah</field>
        <field name="res_model">jurnal.post</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_jurnal_post_tree"/>
    </record>

</odoo>