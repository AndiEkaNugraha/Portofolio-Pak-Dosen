<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Default Book Categories -->
        <record id="book_category_textbook" model="buku.blog">
            <field name="name">Buku Teks</field>
            <field name="subtitle">Buku untuk pembelajaran dan pengajaran</field>
            <field name="book_scope">both</field>
            <field name="scientific_field">education</field>
            <field name="target_audience">undergraduate</field>
            <field name="description">
                <![CDATA[
                <p>Kategori buku teks dan bahan ajar untuk mahasiswa dan pelajar.</p>
                ]]>
            </field>
        </record>

        <record id="book_category_monograph" model="buku.blog">
            <field name="name">Monograf</field>
            <field name="subtitle">Karya tulis ilmiah mendalam tentang topik spesifik</field>
            <field name="book_scope">both</field>
            <field name="scientific_field">other</field>
            <field name="target_audience">researcher</field>
            <field name="description">
                <![CDATA[
                <p>Kategori untuk monograf dan karya tulis ilmiah yang membahas topik spesifik secara mendalam.</p>
                ]]>
            </field>
        </record>

        <record id="book_category_reference" model="buku.blog">
            <field name="name">Buku Referensi</field>
            <field name="subtitle">Buku rujukan dan panduan</field>
            <field name="book_scope">both</field>
            <field name="scientific_field">other</field>
            <field name="target_audience">professional</field>
            <field name="description">
                <![CDATA[
                <p>Kategori untuk buku referensi, panduan, dan handbook.</p>
                ]]>
            </field>
        </record>

        <!-- Default Book Types (Standar Indonesia) -->
        <record id="book_type_textbook" model="buku.type">
            <field name="name">Buku Teks/Textbook</field>
            <field name="code">TB</field>
            <field name="sequence">10</field>
            <field name="description">Buku yang digunakan sebagai bahan ajar utama di perguruan tinggi</field>
        </record>

        <record id="book_type_monograph" model="buku.type">
            <field name="name">Monograf</field>
            <field name="code">MG</field>
            <field name="sequence">20</field>
            <field name="description">Karya tulis ilmiah yang membahas satu topik secara mendalam dan sistematis</field>
        </record>

        <record id="book_type_reference" model="buku.type">
            <field name="name">Buku Referensi</field>
            <field name="code">RF</field>
            <field name="sequence">30</field>
            <field name="description">Buku rujukan seperti kamus, ensiklopedia, manual</field>
        </record>

        <record id="book_type_anthology" model="buku.type">
            <field name="name">Bunga Rampai</field>
            <field name="code">BR</field>
            <field name="sequence">40</field>
            <field name="description">Kumpulan karya tulis dari berbagai penulis dalam satu tema</field>
        </record>

        <record id="book_type_popular" model="buku.type">
            <field name="name">Buku Ilmiah Populer</field>
            <field name="code">IP</field>
            <field name="sequence">50</field>
            <field name="description">Buku yang menyajikan ilmu pengetahuan untuk masyarakat umum</field>
        </record>

        <record id="book_type_novel" model="buku.type">
            <field name="name">Novel</field>
            <field name="code">NV</field>
            <field name="sequence">60</field>
            <field name="description">Karya sastra berupa cerita panjang dalam bentuk prosa</field>
        </record>

        <record id="book_type_poetry" model="buku.type">
            <field name="name">Kumpulan Puisi</field>
            <field name="code">PS</field>
            <field name="sequence">70</field>
            <field name="description">Kumpulan karya puisi dari satu atau beberapa penyair</field>
        </record>

        <record id="book_type_translation" model="buku.type">
            <field name="name">Buku Terjemahan</field>
            <field name="code">TR</field>
            <field name="sequence">80</field>
            <field name="description">Buku yang diterjemahkan dari bahasa asing ke bahasa Indonesia</field>
        </record>

        <record id="book_type_proceedings" model="buku.type">
            <field name="name">Prosiding</field>
            <field name="code">PR</field>
            <field name="sequence">90</field>
            <field name="description">Kumpulan makalah dari seminar, konferensi, atau simposium</field>
        </record>

        <!-- Default Publishers (Indonesia) -->
        <record id="publisher_gramedia" model="book.publisher">
            <field name="name">Gramedia Pustaka Utama</field>
            <field name="code">GPU</field>
            <field name="country">Indonesia</field>
            <field name="city">Jakarta</field>
