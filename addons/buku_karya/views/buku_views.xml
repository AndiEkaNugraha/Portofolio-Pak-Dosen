<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Buku Blog Views -->
        <record id="view_buku_blog_form" model="ir.ui.view">
            <field name="name">buku.blog.form</field>
            <field name="model">buku.blog</field>
            <field name="arch" type="xml">
                <form string="Kategori Buku">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nama Kategori Buku"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="subtitle"/>
                                <field name="book_scope"/>
                            </group>
                            <group>
                                <field name="target_audience"/>
                                <field name="post_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Deskripsi">
                                <field name="description"/>
                            </page>
                            <page string="Buku dan Karya Tulis">
                                <field name="buku_post_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_buku_blog_tree" model="ir.ui.view">
            <field name="name">buku.blog.list</field>
            <field name="model">buku.blog</field>
            <field name="arch" type="xml">
                <list string="Kategori Buku">
                    <field name="name"/>
                    <field name="subtitle"/>
                    <field name="book_scope"/>
                    <field name="target_audience"/>
                    <field name="post_count"/>
                </list>
            </field>
        </record>

        <!-- Buku Type Views -->
        <!-- Removed: Buku Type views are no longer needed -->

        <!-- Publisher Views -->
        <record id="view_book_publisher_form" model="ir.ui.view">
            <field name="name">book.publisher.form</field>
            <field name="model">book.publisher</field>
            <field name="arch" type="xml">
                <form string="Penerbit">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nama Penerbit"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="country"/>
                                <field name="city"/>
                            </group>
                            <group>
                                <field name="website"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group string="Deskripsi">
                            <field name="description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_book_publisher_tree" model="ir.ui.view">
            <field name="name">book.publisher.list</field>
            <field name="model">book.publisher</field>
            <field name="arch" type="xml">
                <list string="Penerbit">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="country"/>
                    <field name="city"/>
                    <field name="website"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Buku Post Views -->
        <record id="view_buku_post_form" model="ir.ui.view">
            <field name="name">buku.post.form</field>
            <field name="model">buku.post</field>
            <field name="arch" type="xml">
                <form string="Buku">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Judul Buku"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="authors"/>
                                <field name="blog_id"/>
                                <field name="publisher_id"/>
                                <field name="publisher_name" invisible="publisher_id"/>
                                <field name="publication_year"/>
                                <field name="status"/>
                                <field name="is_published"/>
                                <field name="slug"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Detail Publikasi">
                                <group>
                                    <group string="Identifikasi Buku">
                                        <field name="isbn"/>
                                        <field name="issn"/>
                                        <field name="pages"/>
                                        <field name="edition"/>
                                        <field name="language"/>
                                        <field name="other_language" invisible="language != 'other'"/>
                                    </group>
                                    <group string="Tanggal &amp; Status">
                                        <field name="publication_date"/>
                                        <field name="publication_month"/>
                                        <field name="academic_level"/>
                                        <field name="print_run"/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Klasifikasi">
                                        <field name="dewey_classification"/>
                                        <field name="subject"/>
                                        <field name="scientific_field"/>
                                    </group>
                                    <group string="Informasi Tambahan">
                                        <field name="co_authors"/>
                                        <field name="editors"/>
                                        <field name="citation_count"/>
                                    </group>
                                </group>
                                <group string="Kata Kunci">
                                    <field name="keywords" placeholder="Kata kunci dipisahkan dengan koma"/>
                                </group>
                            </page>
                            <page string="Deskripsi">
                                <group>
                                    <field name="teaser"/>
                                </group>
                                <group>
                                    <field name="content"/>
                                </group>
                            </page>
                            <page string="Cover &amp; Link">
                                <group>
                                    <group string="Cover Buku">
                                        <field name="cover_image" widget="image" options="{'size': [200, 300]}"/>
                                        <field name="cover_filename" invisible="1"/>
                                    </group>
                                    <group string="Link Buku">
                                        <field name="book_url" widget="url" placeholder="https://example.com/buku"/>
                                    </group>
                                </group>
                            </page>
                            <page string="SEO">
                                <group>
                                    <field name="meta_title" placeholder="Judul untuk SEO (akan menggunakan judul buku jika kosong)"/>
                                    <field name="meta_description" placeholder="Deskripsi untuk SEO (akan menggunakan ringkasan jika kosong)"/>
                                    <field name="meta_keywords" placeholder="Kata kunci untuk SEO, pisahkan dengan koma"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_buku_post_tree" model="ir.ui.view">
            <field name="name">buku.post.list</field>
            <field name="model">buku.post</field>
            <field name="arch" type="xml">
                <list string="Buku dan Karya Tulis">
                    <field name="cover_image" widget="image" options="{'size': [40, 60]}"/>
                    <field name="name"/>
                    <field name="authors"/>
                    <field name="blog_id"/>
                    <field name="publisher_id"/>
                    <field name="publication_year"/>
                    <field name="isbn"/>
                    <field name="status" decoration-success="status == 'published'" decoration-warning="status == 'in_press'" decoration-info="status == 'submitted'" decoration-muted="status == 'draft'"/>
                    <field name="is_published" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <record id="view_buku_post_search" model="ir.ui.view">
            <field name="name">buku.post.search</field>
            <field name="model">buku.post</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="authors"/>
                </search>
            </field>
        </record>

        <record id="view_buku_post_kanban" model="ir.ui.view">
            <field name="name">buku.post.kanban</field>
            <field name="model">buku.post</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="authors"/>
                    <field name="blog_id"/>
                    <field name="publication_year"/>
                    <field name="status"/>
                    <field name="cover_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <t t-if="record.cover_image.raw_value">
                                        <img t-att-src="'/web/image/buku.post/' + record.id.raw_value + '/cover_image'" 
                                             alt="Cover" 
                                             class="o_kanban_image_fill_top" 
                                             style="max-height: 120px; max-width: 80px;"/>
                                    </t>
                                    <t t-else="">
                                        <div class="o_kanban_image_fill_top bg-light d-flex align-items-center justify-content-center" 
                                             style="height: 120px; width: 80px;">
                                            <i class="fa fa-book fa-2x text-muted"/>
                                        </div>
                                    </t>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="authors"/>
                                    </div>
                                    <div class="o_kanban_record_bottom">
                                        <field name="blog_id"/>
                                        <field name="publication_year"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
</odoo>