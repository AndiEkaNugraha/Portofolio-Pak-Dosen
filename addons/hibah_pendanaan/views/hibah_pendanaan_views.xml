<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Blog Category Views -->
        <record id="view_hibah_budget_line_tree" model="ir.ui.view">
            <field name="name">hibah.budget.line.tree</field>
            <field name="model">hibah.budget.line</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="category"/>
                    <field name="description"/>
                    <field name="currency_id" column_invisible="1"/>
                    <field name="amount" widget="monetary" sum="Total"/>
                    <field name="notes"/>
                </list>
            </field>
        </record>

        <record id="view_hibah_pendanaan_blog_list" model="ir.ui.view">
            <field name="name">hibah.pendanaan.blog.list</field>
            <field name="model">hibah.pendanaan.blog</field>
            <field name="arch" type="xml">
                <list string="Kategori Hibah &amp; Pendanaan">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="funding_type"/>
                    <field name="funding_level"/>
                    <field name="funding_agency"/>
                    <field name="post_count"/>
                    <field name="total_funding" widget="monetary"/>
                    <field name="website_published"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_hibah_pendanaan_blog_form" model="ir.ui.view">
            <field name="name">hibah.pendanaan.blog.form</field>
            <field name="model">hibah.pendanaan.blog</field>
            <field name="arch" type="xml">
                <form string="Kategori Hibah &amp; Pendanaan">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="subtitle"/>
                                <field name="funding_type"/>
                                <field name="funding_level"/>
                                <field name="funding_agency"/>
                                <field name="agency_type"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="website_published"/>
                                <field name="active"/>
                                <field name="post_count" readonly="1"/>
                                <field name="total_funding" widget="monetary"/>
                                <field name="average_funding" widget="monetary" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Deskripsi">
                                <field name="description" placeholder="Deskripsi kategori hibah..."/>
                            </page>
                            <page string="Informasi Institusi">
                                <group>
                                    <group>
                                        <field name="institution"/>
                                        <field name="faculty"/>
                                    </group>
                                    <group>
                                        <field name="contact_person"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Post/Grant Views -->
        <record id="view_hibah_pendanaan_post_list" model="ir.ui.view">
            <field name="name">hibah.pendanaan.post.list</field>
            <field name="model">hibah.pendanaan.post</field>
            <field name="arch" type="xml">
                <list string="Hibah &amp; Pendanaan">
                    <field name="name"/>
                    <field name="blog_id"/>
                    <field name="grant_number"/>
                    <field name="funding_agency"/>
                    <field name="status"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="total_amount" widget="monetary"/>
                    <field name="disbursed_amount" widget="monetary"/>
                    <field name="is_featured"/>
                    <field name="website_published"/>
                </list>
            </field>
        </record>

        <record id="view_hibah_pendanaan_post_form" model="ir.ui.view">
            <field name="name">hibah.pendanaan.post.form</field>
            <field name="model">hibah.pendanaan.post</field>
            <field name="arch" type="xml">
                <form string="Hibah &amp; Pendanaan">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_website_published" type="object" class="oe_stat_button" icon="fa-globe">
                                <field name="website_published" widget="website_publish_button"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="subtitle"/>
                                <field name="blog_id"/>
                                <field name="grant_number"/>
                                <field name="grant_scheme"/>
                            </group>
                            <group>
                                <field name="status"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration_months" readonly="1"/>
                                <field name="is_featured"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Informasi Pendanaan">
                                <group>
                                    <group>
                                        <field name="funding_agency"/>
                                        <field name="funding_source"/>
                                        <field name="total_amount" widget="monetary"/>
                                        <field name="disbursed_amount" widget="monetary"/>
                                        <field name="remaining_amount" widget="monetary" readonly="1"/>
                                        <field name="funding_year"/>
                                    </group>
                                    <group>
                                        <field name="overhead_percentage"/>
                                    </group>
                                </group>
                                <group string="Rincian Anggaran">
                                    <field name="budget_line_ids"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="budget_total" widget="monetary" readonly="1" class="oe_subtotal_footer_separator"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Deskripsi &amp; Tujuan">
                                <group>
                                    <field name="research_area"/>
                                    <field name="keywords"/>
                                    <field name="research_focus" placeholder="Fokus penelitian hibah..."/>
                                    <field name="teaser" placeholder="Ringkasan singkat hibah..."/>
                                    <field name="description" placeholder="Deskripsi lengkap hibah..."/>
                                    <field name="background" placeholder="Latar belakang hibah..."/>
                                    <field name="objectives" placeholder="Tujuan hibah..."/>
                                    <field name="expected_outcomes" placeholder="Luaran yang diharapkan..."/>
                                    <field name="terms_conditions" placeholder="Syarat dan ketentuan hibah..."/>
                                </group>
                                
                            </page>
                            <page string="Aplikasi &amp; Persyaratan">
                                <group>
                                    <field name="application_deadline"/>
                                    <field name="eligibility_criteria" placeholder="Kriteria kelayakan penerima hibah..."/>
                                    <field name="application_requirements" placeholder="Persyaratan dan dokumen yang dibutuhkan..."/>
                                    <field name="reporting_requirements" placeholder="Kebutuhan pelaporan..."/>
                                </group>
                            </page>
                            <page string="Kontak &amp; Informasi">
                                <group>
                                    <group>
                                        <field name="contact_person"/>
                                        <field name="contact_email"/>
                                        <field name="contact_phone"/>
                                    </group>
                                    <group>
                                        <field name="project_website"/>
                                        <field name="date"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Dokumentasi &amp; Laporan">
                                <group>
                                    <group>
                                        <field name="interim_reports_filename" invisible="1"/>
                                        <field name="interim_reports" filename="interim_reports_filename"/>
                                    </group>
                                    <group>
                                        <field name="final_report_filename" invisible="1"/>
                                        <field name="final_report" filename="final_report_filename"/>
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="financial_reports_filename" invisible="1"/>
                                        <field name="financial_reports" filename="financial_reports_filename"/>
                                    </group>
                                </group>
                                <group>
                                    <field name="audit_results" placeholder="Hasil audit..."/>
                                </group>
                            </page>
                            <page string="SEO">
                                <group>
                                    <field name="slug"/>
                                    <field name="meta_title"/>
                                    <field name="meta_description"/>
                                    <field name="meta_keywords"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search Views -->
        <record id="view_hibah_pendanaan_blog_search" model="ir.ui.view">
            <field name="name">hibah.pendanaan.blog.search</field>
            <field name="model">hibah.pendanaan.blog</field>
            <field name="arch" type="xml">
                <search string="Cari Kategori Hibah">
                    <field name="name"/>
                    <field name="funding_type"/>
                    <field name="funding_agency"/>
                </search>
            </field>
        </record>

        <record id="view_hibah_pendanaan_post_search" model="ir.ui.view">
            <field name="name">hibah.pendanaan.post.search</field>
            <field name="model">hibah.pendanaan.post</field>
            <field name="arch" type="xml">
                <search string="Cari Hibah &amp; Pendanaan">
                    <field name="name"/>
                    <field name="grant_number"/>
                    <field name="funding_agency"/>
                    <field name="research_area"/>
                    <field name="status"/>
                </search>
            </field>
        </record>

    </data>
</odoo>