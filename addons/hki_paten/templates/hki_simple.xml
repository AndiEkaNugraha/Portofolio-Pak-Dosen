<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Simple HKI Index Page -->
        <template id="hki_index" name="Daftar HKI dan Paten">
            <t t-call="website.layout">
                <t t-set="title">Daftar HKI dan Paten</t>
                
                <div class="container mt32">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>Daftar HKI dan Paten</h1>
                            <p>Koleksi Hak Kekayaan Intelektual dan Paten</p>
                            <hr/>
                        </div>
                    </div>
                    
                    <div class="row">
                        <t t-foreach="posts" t-as="post">
                            <div class="col-md-6 col-lg-4 mb32">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title" t-esc="post.name"/>
                                        <p class="card-text">
                                            <strong>Jenis:</strong> <span t-esc="post.hki_type"/><br/>
                                            <strong>Pencipta:</strong> <span t-esc="post.creators"/><br/>
                                            <strong>Status:</strong> <span t-esc="post.status"/>
                                        </p>
                                        <t t-if="post.teaser">
                                            <p class="card-text" t-esc="post.teaser"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                    
                    <t t-if="not posts">
                        <div class="alert alert-info">
                            <h4>Belum ada data HKI dan Paten</h4>
                            <p>Silakan tambahkan data HKI dan Paten melalui backend.</p>
                        </div>
                    </t>
                    
                </div>
            </t>
        </template>

    </data>
</odoo>