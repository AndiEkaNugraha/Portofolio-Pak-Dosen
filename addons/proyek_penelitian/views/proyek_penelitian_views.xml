<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Blog Category Views -->
        <record id="view_proyek_penelitian_blog_list" model="ir.ui.view">
            <field name="name">proyek.penelitian.blog.list</field>
            <field name="model">proyek.penelitian.blog</field>
            <field name="arch" type="xml">
                <list string="Kategori Proyek Penelitian">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="research_type"/>
                    <field name="funding_category"/>
                    <field name="post_count"/>
                    <field name="website_published"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_proyek_penelitian_blog_form" model="ir.ui.view">
            <field name="name">proyek.penelitian.blog.form</field>
            <field name="model">proyek.penelitian.blog</field>
            <field name="arch" type="xml">
                <form string="Kategori Proyek Penelitian">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="subtitle"/>
                                <field name="research_type"/>
                                <field name="funding_category"/>
                            </group>
                            <group>
                                <field name="sequence"/>
                                <field name="website_published"/>
                                <field name="active"/>
                                <field name="post_count" readonly="1"/>
                            </group>
                        </group>
                        <field name="description" placeholder="Deskripsi kategori..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Produk Terkait Views -->
        <record id="view_proyek_penelitian_produk_tree" model="ir.ui.view">
            <field name="name">proyek.penelitian.produk.tree</field>
            <field name="model">proyek.penelitian.produk</field>
            <field name="arch" type="xml">
                <list>
                    <field name="product_ref"/>
                    <field name="product_type"/>
                    <field name="product_name"/>
                    <field name="product_year"/>
                </list>
            </field>
        </record>

        <record id="view_proyek_penelitian_produk_form" model="ir.ui.view">
            <field name="name">proyek.penelitian.produk.form</field>
            <field name="model">proyek.penelitian.produk</field>
            <field name="arch" type="xml">
                <form string="Produk Terkait">
                    <group>
                        <field name="proyek_id" invisible="1"/>
                        <field name="product_ref" required="1"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_proyek_penelitian_mitra_tree" model="ir.ui.view">
            <field name="name">proyek.penelitian.mitra.tree</field>
            <field name="model">proyek.penelitian.mitra</field>
            <field name="arch" type="xml">
                <list>
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="partner_type"/>
                    <field name="contact_person"/>
                    <field name="partner_url"/>
                </list>
            </field>
        </record>

        <record id="view_proyek_penelitian_mitra_form" model="ir.ui.view">
            <field name="name">proyek.penelitian.mitra.form</field>
            <field name="model">proyek.penelitian.mitra</field>
            <field name="arch" type="xml">
                <form string="Mitra Kolaborasi">
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_type"/>
                            <field name="partner_url" placeholder="https://..."/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="contact_person"/>
                            <field name="contact_email"/>
                        </group>
                    </group>
                    <field name="role_description" placeholder="Jelaskan peran dan kontribusi mitra dalam proyek..."/>
                </form>
            </field>
        </record>
        <record id="view_proyek_penelitian_post_list" model="ir.ui.view">
            <field name="name">proyek.penelitian.post.list</field>
            <field name="model">proyek.penelitian.post</field>
            <field name="arch" type="xml">
                <list string="Proyek Penelitian">
                    <field name="name"/>
                    <field name="blog_id"/>
                    <field name="principal_investigator"/>
                    <field name="status"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="progress_percentage"/>
                    <field name="is_featured"/>
                    <field name="website_published"/>
                </list>
            </field>
        </record>

        <record id="view_proyek_penelitian_post_form" model="ir.ui.view">
            <field name="name">proyek.penelitian.post.form</field>
            <field name="model">proyek.penelitian.post</field>
            <field name="arch" type="xml">
                <form string="Proyek Penelitian">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_website_published" type="object" class="oe_stat_button" icon="fa-globe">
                                <field name="website_published" widget="website_publish_button"/>
                            </button>
                            <button name="action_view_hibah" type="object" class="oe_stat_button" icon="fa-money" invisible="hibah_count == 0">
                                <field name="hibah_count" widget="statinfo" string="Hibah"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="subtitle"/>
                                <field name="blog_id"/>
                                <field name="project_code"/>
                                <field name="principal_investigator"/>
                            </group>
                            <group>
                                <field name="status"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="progress_percentage"/>
                                <field name="is_featured"/>
                            </group>
                        </group>
                        <group string="Pendanaan">
                            <field name="hibah_ids" widget="many2many_tags"/>
                            <field name="total_funding_amount" widget="monetary" readonly="1"/>
                        </group>
                        <group string="Area Penelitian">
                            <field name="research_area"/>
                            <field name="keywords"/>
                        </group>
                        <notebook>
                            <page string="Deskripsi">
                                <field name="teaser" placeholder="Ringkasan singkat proyek..."/>
                                <field name="description" placeholder="Deskripsi lengkap proyek..."/>
                            </page>
                            <page string="Area &amp; Tujuan Penelitian">
                                <group>
                                    <field name="research_area"/>
                                    <field name="keywords"/>
                                    <field name="research_objectives" placeholder="Tujuan penelitian..."/>
                                    <field name="methodology" placeholder="Metodologi penelitian..."/>
                                </group>
                            </page>
                            <page string="Produk Terkait">
                                <field name="product_ids" context="{'default_proyek_id': id}"/>
                            </page>
                            <page string="Tim &amp; Kolaborasi">
                                <group>
                                    <field name="co_investigators" placeholder="Daftar anggota peneliti..."/>
                                </group> 
                                <group string="Mahasiswa &amp; Asisten">
                                    <field name="phd_students" placeholder="Mahasiswa S3..."/>
                                    <field name="master_students" placeholder="Mahasiswa S2..."/>
                                    <field name="undergrad_students" placeholder="Mahasiswa S1..."/>
                                    <field name="research_assistants" placeholder="Asisten peneliti..."/>
                                </group>
                                <group string="Kolaborator">
                                    <field name="mitra_ids"/>
                                </group>
                            </page>
                            <page string="Dampak &amp; Prestasi">
                                <group >
                                    <field name="achievements" placeholder="Pencapaian &amp; prestasi..."/>
                                    <field name="social_impact" placeholder="Dampak sosial..."/>
                                    <field name="economic_impact" placeholder="Dampak ekonomi..."/>
                                    <field name="policy_impact" placeholder="Dampak kebijakan..."/>
                                </group>
                            </page>
                            <page string="Media &amp; Dokumentasi">
                                <group>
                                    <field name="project_images" widget="image"/>
                                    <field name="project_images_filename" invisible="1"/>
                                    <field name="project_video" placeholder="URL video dokumentasi..."/>
                                </group>
                                <group>
                                    <field name="project_documents" widget="binary"/>
                                    <field name="project_documents_filename" invisible="1"/>
                                </group>
                            </page>
                            <page string="Progress &amp; Milestone">
                                <group>
                                    <field name="milestones" placeholder="Milestone &amp; target..."/>
                                    <field name="current_activities" placeholder="Kegiatan saat ini..."/>
                                    <field name="next_steps" placeholder="Langkah selanjutnya..."/>
                                </group>
                            </page>
                            <page string="Kontak &amp; Link">
                                <group>
                                    <field name="contact_email"/>
                                    <field name="project_website" placeholder="URL website proyek..."/>
                                    <field name="related_links" placeholder="Link terkait..."/>
                                </group>
                            </page>
                            <page string="SEO">
                                <group>
                                    <field name="slug"/>
                                    <field name="meta_title"/>
                                    <field name="meta_description"/>
                                    <field name="meta_keywords"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search Views -->
        <record id="view_proyek_penelitian_blog_search" model="ir.ui.view">
            <field name="name">proyek.penelitian.blog.search</field>
            <field name="model">proyek.penelitian.blog</field>
            <field name="arch" type="xml">
                <search string="Cari Kategori Proyek">
                    <field name="name"/>
                    <field name="research_type"/>
                    <field name="funding_category"/>
                </search>
            </field>
        </record>

        <record id="view_proyek_penelitian_post_search" model="ir.ui.view">
            <field name="name">proyek.penelitian.post.search</field>
            <field name="model">proyek.penelitian.post</field>
            <field name="arch" type="xml">
                <search string="Cari Proyek Penelitian">
                    <field name="name"/>
                    <field name="principal_investigator"/>
                    <field name="research_area"/>
                    <field name="status"/>
                </search>
            </field>
        </record>

    </odoo>