<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Profil Dosen - Placeholder Template -->
        <template id="profil_dosen_page" name="Profil Dosen">
            <t t-call="website.layout">
                <div class="container">
                    <h1>Profil Dosen</h1>
                    <div t-if="dosen">
                        <h2 t-field="dosen.name"/>
                        <p t-field="dosen.bio"/>
                    </div>
                </div>
            </t>
        </template>

        <!-- Profil Dosen List Template -->
        <template id="profil_dosen_list" name="Daftar Profil Dosen">
            <t t-call="website.layout">
                <div class="container">
                    <h1>Daftar Profil Dosen</h1>
                    <div class="row">
                        <t t-foreach="dosens" t-as="dosen">
                            <div class="col-md-4 mb-3">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title" t-field="dosen.name"/>
                                        <p class="card-text" t-field="dosen.bio"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </t>
        </template>
    </odoo>
