<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Main Prosiding Index Page -->
        <template id="prosiding_index" name="Prosiding Konferensi">
            <t t-call="website.layout">
                <div id="wrap">
                    <!-- Page Header -->
                    <section class="bg-light py-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8">
                                    <h1 class="display-4 fw-bold">Prosiding Konferensi</h1>
                                    <p class="lead">Kumpulan paper dan presentasi dari konferensi nasional &amp; internasional</p>
                                </div>
                                <div class="col-lg-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Statistik</h5>
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <h4 class="text-primary"><t t-esc="stats['total_papers']"/></h4>
                                                    <small class="text-muted">Total Paper</small>
                                                </div>
                                                <div class="col-6">
                                                    <h4 class="text-success"><t t-esc="stats['ieee_papers']"/></h4>
                                                    <small class="text-muted">IEEE Xplore</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Search and Filters -->
                    <section class="py-4 border-bottom">
                        <div class="container">
                            <form method="get" class="row g-3">
                                <div class="col-md-4">
                                    <input type="text" class="form-control" name="search" 
                                           placeholder="Cari judul, penulis, atau konferensi..." 
                                           t-att-value="search"/>
                                </div>
                                <div class="col-md-2">
                                    <select name="category_id" class="form-select">
                                        <option value="">Semua Kategori</option>
                                        <t t-foreach="categories" t-as="category">
                                            <option t-att-value="category.id" 
                                                    t-att-selected="category_id == category.id">
                                                <t t-esc="category.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <select name="indexing" class="form-select">
                                        <option value="">Semua Indexing</option>
                                        <option value="ieee" t-att-selected="indexing == 'ieee'">IEEE Xplore</option>
                                        <option value="acm" t-att-selected="indexing == 'acm'">ACM DL</option>
                                        <option value="scopus" t-att-selected="indexing == 'scopus'">Scopus</option>
                                        <option value="wos" t-att-selected="indexing == 'wos'">Web of Science</option>
                                        <option value="sinta" t-att-selected="indexing == 'sinta'">SINTA</option>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <select name="year" class="form-select">
                                        <option value="">Semua Tahun</option>
                                        <t t-foreach="years" t-as="yr">
                                            <option t-att-value="yr" t-att-selected="year == yr">
                                                <t t-esc="yr"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="fa fa-search"/> Cari
                                    </button>
                                </div>
                            </form>
                        </div>
                    </section>

                    <!-- Results -->
                    <section class="py-5">
                        <div class="container">
                            <t t-if="not posts">
                                <div class="text-center py-5">
                                    <i class="fa fa-search fa-3x text-muted mb-3"/>
                                    <h3 class="text-muted">Tidak ada prosiding ditemukan</h3>
                                    <p class="text-muted">Coba ubah kriteria pencarian Anda</p>
                                </div>
                            </t>
                            
                            <t t-else="">
                                <div class="row">
                                    <t t-foreach="posts" t-as="post">
                                        <div class="col-lg-12 mb-4">
                                            <div class="card h-100">
                                                <div class="card-body">
                                                    <div class="row">
                                                        <div class="col-md-9">
                                                            <h5 class="card-title">
                                                                <a t-att-href="post.website_url" class="text-decoration-none">
                                                                    <t t-esc="post.name"/>
                                                                </a>
                                                            </h5>
                                                            <p class="text-muted mb-2">
                                                                <strong>Penulis:</strong> <t t-esc="post.authors"/>
                                                            </p>
                                                            <p class="text-muted mb-2">
                                                                <strong>Konferensi:</strong> <t t-esc="post.conference_name"/>
                                                                <t t-if="post.conference_acronym">
                                                                    (<t t-esc="post.conference_acronym"/>)
                                                                </t>
                                                            </p>
                                                            <p class="text-muted mb-2">
                                                                <i class="fa fa-calendar"/> <t t-esc="post.conference_date"/>
                                                                <t t-if="post.get_conference_location()">
                                                                    | <i class="fa fa-map-marker"/> <t t-esc="post.get_conference_location()"/>
                                                                </t>
                                                            </p>
                                                            <t t-if="post.teaser">
                                                                <p class="card-text"><t t-esc="post.teaser"/></p>
                                                            </t>
                                                        </div>
                                                        <div class="col-md-3 text-end">
                                                            <t t-foreach="post.get_indexing_badges()" t-as="badge">
                                                                <span t-att-class="'badge me-1 mb-1 ' + badge['class']">
                                                                    <t t-esc="badge['name']"/>
                                                                </span>
                                                            </t>
                                                            <br/>
                                                            <t t-if="post.publisher">
                                                                <small class="text-muted d-block mt-2">
                                                                    Publisher: <t t-esc="post.publisher"/>
                                                                </small>
                                                            </t>
                                                            <t t-if="post.best_paper">
                                                                <span class="badge bg-warning text-dark mt-2">
                                                                    <i class="fa fa-trophy"/> Best Paper
                                                                </span>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                                
                                <!-- Pagination -->
                                <t t-call="website.pager"/>
                            </t>
                        </div>
                    </section>
                </div>
            </t>
        </template>

        <!-- Individual Paper Detail Page -->
        <template id="prosiding_detail" name="Detail Paper Prosiding">
            <t t-call="website.layout">
                <div id="wrap">
                    <section class="py-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-8">
                                    <!-- Paper Header -->
                                    <article>
                                        <header class="mb-4">
                                            <h1 class="display-5 fw-bold mb-3"><t t-esc="post.name"/></h1>
                                            <t t-if="post.subtitle">
                                                <h2 class="h4 text-muted mb-3"><t t-esc="post.subtitle"/></h2>
                                            </t>
                                            
                                            <!-- Authors -->
                                            <p class="lead mb-3">
                                                <strong>Penulis:</strong> <t t-esc="post.authors"/>
                                            </p>
                                            
                                            <!-- Conference Info -->
                                            <div class="card bg-light mb-4">
                                                <div class="card-body">
                                                    <h5 class="card-title">Informasi Konferensi</h5>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <p class="mb-2">
                                                                <strong>Konferensi:</strong> <t t-esc="post.conference_name"/>
                                                                <t t-if="post.conference_acronym">
                                                                    (<t t-esc="post.conference_acronym"/>)
                                                                </t>
                                                            </p>
                                                            <p class="mb-2">
                                                                <strong>Tanggal:</strong> <t t-esc="post.conference_date"/>
                                                            </p>
                                                            <t t-if="post.get_conference_location()">
                                                                <p class="mb-2">
                                                                    <strong>Lokasi:</strong> <t t-esc="post.get_conference_location()"/>
                                                                </p>
                                                            </t>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <t t-if="post.organizer">
                                                                <p class="mb-2">
                                                                    <strong>Penyelenggara:</strong> <t t-esc="post.organizer"/>
                                                                </p>
                                                            </t>
                                                            <t t-if="post.publisher">
                                                                <p class="mb-2">
                                                                    <strong>Publisher:</strong> <t t-esc="post.publisher"/>
                                                                </p>
                                                            </t>
                                                            <t t-if="post.pages">
                                                                <p class="mb-2">
                                                                    <strong>Halaman:</strong> <t t-esc="post.pages"/>
                                                                </p>
                                                            </t>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Indexing Badges -->
                                                    <div class="mt-3">
                                                        <t t-foreach="post.get_indexing_badges()" t-as="badge">
                                                            <span t-att-class="'badge me-2 mb-2 ' + badge['class']">
                                                                <t t-esc="badge['name']"/>
                                                            </span>
                                                        </t>
                                                        <t t-if="post.best_paper">
                                                            <span class="badge bg-warning text-dark me-2 mb-2">
                                                                <i class="fa fa-trophy"/> Best Paper Award
                                                            </span>
                                                        </t>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <!-- Links -->
                                            <div class="mb-4">
                                                <t t-if="post.doi">
                                                    <a t-att-href="'https://doi.org/' + post.doi" 
                                                       class="btn btn-outline-primary me-2 mb-2" 
                                                       target="_blank">
                                                        <i class="fa fa-external-link"/> DOI
                                                    </a>
                                                </t>
                                                <t t-if="post.url">
                                                    <a t-att-href="post.url" 
                                                       class="btn btn-outline-success me-2 mb-2" 
                                                       target="_blank">
                                                        <i class="fa fa-file-pdf-o"/> Full Paper
                                                    </a>
                                                </t>
                                            </div>
                                        </header>
                                        
                                        <!-- Abstract -->
                                        <t t-if="post.content">
                                            <section class="mb-5">
                                                <h3>Abstrak</h3>
                                                <div class="oe_structure" t-field="post.content"/>
                                            </section>
                                        </t>
                                        
                                        <!-- Keywords -->
                                        <t t-if="post.keywords">
                                            <section class="mb-4">
                                                <h4>Kata Kunci</h4>
                                                <p><t t-esc="post.keywords"/></p>
                                            </section>
                                        </t>
                                    </article>
                                </div>
                                
                                <!-- Sidebar -->
                                <div class="col-lg-4">
                                    <div class="sticky-top" style="top: 20px;">
                                        <!-- Quick Info -->
                                        <div class="card mb-4">
                                            <div class="card-header">
                                                <h5 class="card-title mb-0">Info Singkat</h5>
                                            </div>
                                            <div class="card-body">
                                                <t t-if="post.presentation_type">
                                                    <p class="mb-2">
                                                        <strong>Jenis Presentasi:</strong> <t t-esc="post.presentation_type"/>
                                                    </p>
                                                </t>
                                                <t t-if="post.conference_rank">
                                                    <p class="mb-2">
                                                        <strong>Peringkat Konferensi:</strong> <t t-esc="post.conference_rank"/>
                                                    </p>
                                                </t>
                                                <t t-if="post.subject_area">
                                                    <p class="mb-2">
                                                        <strong>Bidang:</strong> <t t-esc="post.subject_area"/>
                                                    </p>
                                                </t>
                                                <t t-if="post.citations > 0">
                                                    <p class="mb-0">
                                                        <strong>Sitasi:</strong> <t t-esc="post.citations"/>
                                                    </p>
                                                </t>
                                            </div>
                                        </div>
                                        
                                        <!-- Related Papers -->
                                        <t t-if="related_posts">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h5 class="card-title mb-0">Paper Terkait</h5>
                                                </div>
                                                <div class="card-body">
                                                    <t t-foreach="related_posts" t-as="related">
                                                        <div class="mb-3 pb-3 border-bottom">
                                                            <h6 class="mb-1">
                                                                <a t-att-href="related.website_url" 
                                                                   class="text-decoration-none">
                                                                    <t t-esc="related.name"/>
                                                                </a>
                                                            </h6>
                                                            <small class="text-muted">
                                                                <t t-esc="related.conference_name"/> 
                                                                (<t t-esc="related.conference_year"/>)
                                                            </small>
                                                        </div>
                                                    </t>
                                                </div>
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </template>

        <!-- Statistics Page -->
        <template id="prosiding_statistics" name="Statistik Prosiding">
            <t t-call="website.layout">
                <div id="wrap">
                    <section class="py-5">
                        <div class="container">
                            <h1 class="display-4 fw-bold mb-5">Statistik Prosiding Konferensi</h1>
                            
                            <!-- Overview Stats -->
                            <div class="row mb-5">
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h3 class="text-primary"><t t-esc="stats['total_papers']"/></h3>
                                            <p class="card-text">Total Paper</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h3 class="text-success"><t t-esc="indexing_stats['IEEE Xplore']"/></h3>
                                            <p class="card-text">IEEE Xplore</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h3 class="text-info"><t t-esc="indexing_stats['Scopus']"/></h3>
                                            <p class="card-text">Scopus</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-3 mb-3">
                                    <div class="card text-center">
                                        <div class="card-body">
                                            <h3 class="text-warning"><t t-esc="stats['total_categories']"/></h3>
                                            <p class="card-text">Kategori</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Recent Papers -->
                            <div class="row">
                                <div class="col-lg-8">
                                    <h3 class="mb-4">Paper Terbaru</h3>
                                    <t t-foreach="recent_papers" t-as="paper">
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <h5 class="card-title">
                                                    <a t-att-href="paper.website_url" class="text-decoration-none">
                                                        <t t-esc="paper.name"/>
                                                    </a>
                                                </h5>
                                                <p class="text-muted mb-2">
                                                    <t t-esc="paper.conference_name"/> | <t t-esc="paper.conference_date"/>
                                                </p>
                                                <p class="text-muted"><t t-esc="paper.authors"/></p>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                                
                                <div class="col-lg-4">
                                    <!-- Indexing Distribution -->
                                    <div class="card mb-4">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">Distribusi Indexing</h5>
                                        </div>
                                        <div class="card-body">
                                            <t t-foreach="indexing_stats.items()" t-as="item">
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span><t t-esc="item[0]"/></span>
                                                    <span class="fw-bold"><t t-esc="item[1]"/></span>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                    
                                    <!-- Category Distribution -->
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">Paper per Kategori</h5>
                                        </div>
                                        <div class="card-body">
                                            <t t-foreach="category_stats.items()" t-as="item">
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span><t t-esc="item[0]"/></span>
                                                    <span class="fw-bold"><t t-esc="item[1]"/></span>
                                                </div>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </template>

    </data>
</odoo>