<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Beranda Profile Tree View -->
        <record id="beranda_profile_tree_view" model="ir.ui.view">
            <field name="name">beranda.profile.tree</field>
            <field name="model">beranda.profile</field>
            <field name="arch" type="xml">
                <list string="Profil Beranda">
                    <field name="sequence" widget="handle"/>
                    <field name="profile_photo" widget="image" options="{'size': [40, 40]}"/>
                    <field name="display_name_with_title"/>
                    <field name="position"/>
                    <field name="institution"/>
                    <field name="email"/>
                    <field name="is_active" widget="boolean_toggle"/>
                    <field name="total_achievements"/>
                </list>
            </field>
        </record>

        <!-- Beranda Profile Form View Simple -->
        <record id="beranda_profile_form_view_simple" model="ir.ui.view">
            <field name="name">beranda.profile.form.simple</field>
            <field name="model">beranda.profile</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Profil Beranda">
                    <sheet>
                        <div class="oe_title">
                            <div class="o_row">
                                <field name="profile_photo" widget="image" class="oe_avatar" options="{'size': [90, 90]}"/>
                                <div>
                                    <label for="name" class="oe_edit_only"/>
                                    <h1><field name="name" placeholder="Nama Lengkap"/></h1>
                                    <field name="title" placeholder="Gelar Akademik"/>
                                </div>
                            </div>
                        </div>

                        <group>
                            <group>
                                <field name="position"/>
                                <field name="institution"/>
                                <field name="email"/>
                                <field name="phone"/>
                                <field name="is_active"/>
                                <field name="slug"/>
                            </group>
                            <group>
                                <field name="theme_color"/>
                                <field name="total_publications"/>
                                <field name="total_research_projects"/>
                                <field name="total_patents"/>
                                <field name="years_experience"/>
                                <field name="h_index"/>
                            </group>
                        </group>

                        <group string="Bio Singkat">
                            <field name="short_bio" widget="text" placeholder="Bio singkat untuk hero section (max 200 karakter)..." options="{'rows': 3}"/>
                        </group>

                        <group string="Keahlian">
                            <field name="expertise_areas" placeholder="Artificial Intelligence, Machine Learning, Data Science" nolabel="1"/>
                        </group>
                        
                        <notebook>
                            <page string="Deskripsi Lengkap">
                                <separator string="Tentang Saya"/>
                                <field name="about_me" placeholder="Deskripsi lengkap tentang latar belakang dan keahlian Anda..."/>
                                
                                <separator string="Visi &amp; Misi"/>
                                <field name="vision_mission" placeholder="Visi dan misi Anda dalam bidang akademik dan penelitian..."/>
                            </page>

                            <page string="Kontak &amp; Media Sosial">
                                <group>
                                    <group>
                                        <field name="office_address"/>
                                        <field name="website_url" widget="url"/>
                                        <field name="collaboration_email"/>
                                    </group>
                                    <group>
                                        <field name="google_scholar_url" widget="url"/>
                                        <field name="researchgate_url" widget="url"/>
                                        <field name="orcid_url" widget="url"/>
                                        <field name="linkedin_url" widget="url"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Dokumen &amp; CTA">
                                <group>
                                    <group string="Upload Dokumen">
                                        <field name="cv_file" filename="cv_filename"/>
                                        <field name="cv_filename" invisible="1"/>
                                        <field name="cv_last_updated"/>
                                    </group>
                                    <group string="Tombol CTA">
                                        <field name="show_research_cta"/>
                                        <field name="show_cv_download"/>
                                        <field name="show_collaboration_cta"/>
                                        <field name="research_cta_url"/>
                                    </group>
                                </group>
                                
                                <group>
                                    <group string="Statistik Tambahan">
                                        <field name="total_citations"/>
                                        <field name="sequence"/>
                                    </group>
                                </group>
                            </page>

                            <page string="SEO">
                                <group>
                                    <field name="meta_title"/>
                                    <field name="meta_description"/>
                                    <field name="meta_keywords"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Beranda Achievement Tree View -->
        <record id="beranda_achievement_tree_view" model="ir.ui.view">
            <field name="name">beranda.achievement.tree</field>
            <field name="model">beranda.achievement</field>
            <field name="arch" type="xml">
                <list string="Pencapaian" editable="bottom">
                    <field name="sequence" widget="handle"/>
                    <field name="date"/>
                    <field name="name"/>
                    <field name="category"/>
                    <field name="profile_id"/>
                    <field name="is_highlight" widget="boolean_toggle"/>
                    <field name="url" widget="url"/>
                </list>
            </field>
        </record>

        <!-- Beranda Achievement Form View -->
        <record id="beranda_achievement_form_view" model="ir.ui.view">
            <field name="name">beranda.achievement.form</field>
            <field name="model">beranda.achievement</field>
            <field name="arch" type="xml">
                <form string="Pencapaian">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Judul Pencapaian"/></h1>
                        </div>

                        <group>
                            <group>
                                <field name="profile_id"/>
                                <field name="category"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="is_highlight"/>
                                <field name="sequence"/>
                                <field name="url" widget="url"/>
                            </group>
                        </group>

                        <group>
                            <field name="image" widget="image" class="oe_avatar" options="{'size': [100, 100]}"/>
                            <field name="image_filename" invisible="1"/>
                        </group>

                        <separator string="Deskripsi"/>
                        <field name="description" placeholder="Deskripsi pencapaian..."/>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Beranda Profile Action -->
        <record id="beranda_profile_action" model="ir.actions.act_window">
            <field name="name">Profil Beranda</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">beranda.profile</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="beranda_profile_form_view_simple"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Buat Profil Beranda Pertama Anda!
                </p>
                <p>
                    Kelola profil profesional Anda yang akan ditampilkan di beranda website portofolio.
                    Anda dapat menambahkan foto, bio, statistik akademik, dan pengaturan call-to-action.
                </p>
            </field>
        </record>

        <!-- Beranda Achievement Action -->
        <record id="beranda_achievement_action" model="ir.actions.act_window">
            <field name="name">Pencapaian</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">beranda.achievement</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tambahkan Pencapaian Pertama Anda!
                </p>
                <p>
                    Highlight pencapaian terbaru Anda seperti penghargaan, publikasi, atau penelitian
                    yang akan ditampilkan di section pencapaian beranda.
                </p>
            </field>
        </record>

    </data>
</odoo>