<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Main Menu -->
        <menuitem 
            id="beranda_main_menu"
            name="Beranda"
            sequence="5"
            web_icon="beranda_dosen,static/description/icon.png"/>

        <!-- Sub Menu: Profil -->
        <menuitem 
            id="beranda_profile_menu"
            name="Profil Beranda"
            parent="beranda_main_menu"
            action="beranda_profile_action"
            sequence="10"/>

        <!-- Sub Menu: Pencapaian -->
        <menuitem 
            id="beranda_achievement_menu"
            name="Pencapaian"
            parent="beranda_main_menu"
            action="beranda_achievement_action"
            sequence="20"/>

        <!-- Sub Menu: Preview Beranda -->
        <record id="beranda_preview_action" model="ir.actions.act_url">
            <field name="name">Preview Beranda</field>
            <field name="url">/</field>
            <field name="target">new</field>
        </record>

        <menuitem 
            id="beranda_preview_menu"
            name="Preview Beranda"
            parent="beranda_main_menu"
            action="beranda_preview_action"
            sequence="30"/>

    </data>
</odoo>