<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Kategori Mata Kuliah - List View -->
        <record id="matakuliah_blog_list_view" model="ir.ui.view">
            <field name="name">matakuliah.blog.list</field>
            <field name="model">matakuliah.blog</field>
            <field name="arch" type="xml">
                <list string="Kategori Mata Kuliah">
                    <field name="name"/>
                    <field name="program_studi"/>
                </list>
            </field>
        </record>

        <!-- Kategori Mata Kuliah - Form View -->
        <record id="matakuliah_blog_form_view" model="ir.ui.view">
            <field name="name">matakuliah.blog.form</field>
            <field name="model">matakuliah.blog</field>
            <field name="arch" type="xml">
                <form string="Kategori Mata Kuliah">
                    <sheet>
                        <group>
                            <field name="name" required="True"/>
                            <field name="program_studi" required="True"/>
                            <field name="jenis_program"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Mata Kuliah - Search View -->
        <record id="matakuliah_post_search_view" model="ir.ui.view">
            <field name="name">matakuliah.post.search</field>
            <field name="model">matakuliah.post</field>
            <field name="arch" type="xml">
                <search string="Cari Mata Kuliah">
                    <field name="course_code"/>
                    <field name="course_name"/>
                    <field name="blog_id"/>
                </search>
            </field>
        </record>

        <!-- Mata Kuliah - List View -->
        <record id="matakuliah_post_list_view" model="ir.ui.view">
            <field name="name">matakuliah.post.list</field>
            <field name="model">matakuliah.post</field>
            <field name="arch" type="xml">
                <list string="Daftar Mata Kuliah">
                    <field name="course_code"/>
                    <field name="course_name"/>
                    <field name="blog_id"/>
                </list>
            </field>
        </record>

        <!-- Mata Kuliah - Form View -->
        <record id="matakuliah_post_form_view" model="ir.ui.view">
            <field name="name">matakuliah.post.form</field>
            <field name="model">matakuliah.post</field>
            <field name="arch" type="xml">
                <form string="Mata Kuliah">
                    <sheet>
                        <group>
                            <field name="blog_id"/>
                            <field name="course_code"/>
                            <field name="course_name"/>
                            <field name="credits"/>
                            <field name="slug"/>
                            <field name="website_published"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Actions -->
        <record id="matakuliah_blog_action" model="ir.actions.act_window">
            <field name="name">Kategori Mata Kuliah</field>
            <field name="res_model">matakuliah.blog</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="matakuliah_post_action" model="ir.actions.act_window">
            <field name="name">Daftar Mata Kuliah</field>
            <field name="res_model">matakuliah.post</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
