<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Blog categories untuk mata kuliah -->
        <record id="matakuliah_blog_programming" model="matakuliah.blog">
            <field name="name">Teknik Pemrograman</field>
            <field name="program_studi">Teknik Informatika</field>
            <field name="jenis_program">regular</field>
        </record>

        <record id="matakuliah_blog_database" model="matakuliah.blog">
            <field name="name">Basis Data</field>
            <field name="program_studi">Teknik Informatika</field>
            <field name="jenis_program">regular</field>
        </record>

        <record id="matakuliah_blog_web" model="matakuliah.blog">
            <field name="name">Pengembangan Web</field>
            <field name="program_studi">Teknik Informatika</field>
            <field name="jenis_program">regular</field>
        </record>

        <!-- Sample mata kuliah -->
        <record id="matakuliah_post_python" model="matakuliah.post">
            <field name="blog_id" ref="matakuliah_blog_programming"/>
            <field name="name">Pemrograman Python</field>
            <field name="course_code">IF101</field>
            <field name="course_name">Pemrograman Python</field>
            <field name="credits">3</field>
            <field name="course_type">teori</field>
            <field name="slug">pemrograman-python</field>
            <field name="status_course">wajib</field>
            <field name="website_published">False</field>
        </record>
    </data>
</odoo>
