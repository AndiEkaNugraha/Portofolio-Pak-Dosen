<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Access Control for Jadwal Konsultasi Model -->
    
    <!-- User Role - Read only -->
    <record id="access_jadwal_konsultasi_user" model="ir.model.access">
        <field name="name">Jadwal Konsultasi - User</field>
        <field name="model_id" search="[('model', '=', 'jadwal.konsultasi')]"/>
        <field name="group_id" ref="base.group_user"/>
        <field name="perm_read">1</field>
        <field name="perm_write">0</field>
        <field name="perm_create">0</field>
        <field name="perm_unlink">0</field>
    </record>

    <!-- Manager Role - Create, Read, Update -->
    <record id="access_jadwal_konsultasi_manager" model="ir.model.access">
        <field name="name">Jadwal Konsultasi - Manager</field>
        <field name="model_id" search="[('model', '=', 'jadwal.konsultasi')]"/>
        <field name="group_id" ref="base.group_erp_manager"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">0</field>
    </record>

    <!-- System Role - Full access -->
    <record id="access_jadwal_konsultasi_system" model="ir.model.access">
        <field name="name">Jadwal Konsultasi - System</field>
        <field name="model_id" search="[('model', '=', 'jadwal.konsultasi')]"/>
        <field name="group_id" ref="base.group_system_user"/>
        <field name="perm_read">1</field>
        <field name="perm_write">1</field>
        <field name="perm_create">1</field>
        <field name="perm_unlink">1</field>
    </record>
</odoo>
