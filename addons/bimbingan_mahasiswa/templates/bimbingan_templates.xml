                <t t-set="guidance_count" t-value="guidance_count or 0"/>
                <div class="o_portal_index_card col-md-6 order-2">
                    <a href="/my/guidance" class="d-flex gap-2 gap-md-3 py-3 pe-2 px-md-3 h-100 rounded text-decoration-none bg-100">
                        <div class="o_portal_icon d-block align-self-start">
                            <svg xml:space="preserve" width="64px" height="64px" version="1.1" style="shape-rendering:geometricPrecision; text-rendering:geometricPrecision; image-rendering:optimizeQuality; fill-rule:evenodd; clip-rule:evenodd" viewBox="0 0 12900.7 12900.7">
