<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Record Rule for Portal Users - Guidance Request -->
        <record id="guidance_request_portal_rule" model="ir.rule">
            <field name="name">Portal User: Own Guidance Requests</field>
            <field name="model_id" ref="model_guidance_request"/>
            <field name="domain_force">[('student_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Record Rule for Portal Users - Guidance Note -->
        <record id="guidance_note_portal_rule" model="ir.rule">
            <field name="name">Portal User: Own Guidance Notes</field>
            <field name="model_id" ref="model_guidance_note"/>
            <field name="domain_force">[('guidance_id.student_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Record Rule for Internal Users - Guidance Request (All Access) -->
        <record id="guidance_request_user_rule" model="ir.rule">
            <field name="name">Internal User: All Guidance Requests</field>
            <field name="model_id" ref="model_guidance_request"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rule for Internal Users - Guidance Note (All Access) -->
        <record id="guidance_note_user_rule" model="ir.rule">
            <field name="name">Internal User: All Guidance Notes</field>
            <field name="model_id" ref="model_guidance_note"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
