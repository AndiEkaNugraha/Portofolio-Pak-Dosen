<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Main Menu -->
        <record id="menu_guidance_main" model="ir.ui.menu">
            <field name="name">Bimbingan Mahasiswa</field>
            <field name="sequence">40</field>
        </record>

        <!-- Guidance Request Menu -->
        <record id="menu_guidance_request" model="ir.ui.menu">
            <field name="name">Pengajuan Bimbingan</field>
            <field name="parent_id" ref="menu_guidance_main"/>
            <field name="action" ref="action_guidance_request"/>
            <field name="sequence">10</field>
        </record>
        
        <!-- Configuration Menu -->
        <record id="menu_guidance_config" model="ir.ui.menu">
            <field name="name">Konfigurasi</field>
            <field name="parent_id" ref="menu_guidance_main"/>
            <field name="action" ref="action_bimbingan_config_settings"/>
            <field name="sequence">90</field>
        </record>
    </data>
</odoo>