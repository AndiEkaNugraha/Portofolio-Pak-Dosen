<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Acara Blog Views -->
        <record id="view_acara_blog_form" model="ir.ui.view">
            <field name="name">acara.blog.form</field>
            <field name="model">acara.blog</field>
            <field name="arch" type="xml">
                <form string="Kategori Acara Dosen">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Nama Kategori Acara"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="subtitle"/>
                                <field name="acara_scope"/>
                                <field name="event_type"/>
                            </group>
                            <group>
                                <field name="post_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Deskripsi">
                                <field name="description"/>
                            </page>
                            <page string="Acara Dosen">
                                <field name="acara_post_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_acara_blog_tree" model="ir.ui.view">
            <field name="name">acara.blog.tree</field>
            <field name="model">acara.blog</field>
            <field name="arch" type="xml">
                <list string="Kategori Acara Dosen">
                    <field name="name"/>
                    <field name="subtitle"/>
                    <field name="acara_scope"/>
                    <field name="event_type"/>
                    <field name="post_count"/>
                </list>
            </field>
        </record>

        <!-- Acara Post Views -->
        <record id="view_acara_post_form" model="ir.ui.view">
            <field name="name">acara.post.form</field>
            <field name="model">acara.post</field>
            <field name="arch" type="xml">
                <form string="Acara Dosen">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Judul Acara"/>
                            </h1>
                        </div>
                        <group>
                            <field name="subtitle"/>
                            <field name="blog_id"/>
                            <field name="acara_type_id"/>
                            <field name="role"/>
                            <field name="status"/>
                            <field name="website_published"/>
                            <field name="slug"/>
                        </group>
                        
                        <group string="Cover Photo">
                            <field name="cover_image" widget="image" class="oe_avatar" options="{'preview_image': 'cover_image', 'size': [90, 90]}"/>
                        </group>
                        
                        <group string="Ringkasan">
                            <field name="teaser_text" widget="text" placeholder="Ringkasan singkat acara untuk preview dan website..." options="{'rows': 4}"/>
                        </group>
                        
                        <group string="Deskripsi Lengkap">
                            <field name="description_html" widget="html" placeholder="Deskripsikan acara secara lengkap..." options="{'rows': 10}"/>
                        </group>
                        
                        <notebook>
                            <page string="Detail Acara">
                                <group>
                                    <group>
                                        <field name="event_date"/>
                                        <field name="event_end_date"/>
                                        <field name="duration_days"/>
                                        <field name="duration_hours"/>
                                        <field name="organizer"/>
                                        <field name="organizer_website" widget="url" placeholder="https://"/>
                                        <field name="co_organizer"/>
                                        <field name="co_organizer_website" widget="url" placeholder="https://"/>
                                    </group>
                                    <group>
                                        <field name="target_audience"/>
                                        <field name="actual_participants"/>
                                        <field name="location"/>
                                        <field name="online_platform"/>
                                        <field name="event_format"/>
                                        <field name="meeting_link"/>
                                        
                                    </group>
                                </group>
                                <group string="Topik/Materi">
                                    <field name="topics" widget="text"/>
                                </group>
                                <group string="Tujuan &amp; Hasil">
                                    <field name="objectives" widget="text"/>
                                    <field name="outcomes" widget="text"/>
                                </group>
                            </page>
                            <page string="Dokumentasi">
                                <group>
                                    <group>
                                        <field name="documentation_links"/>
                                        <field name="certificate_file" filename="certificate_filename"/>
                                        <field name="certificate_filename" invisible="1"/>
                                    </group>
                                    <group>
                                        <field name="presentation_file" filename="presentation_filename"/>
                                        <field name="presentation_filename" invisible="1"/>
                                    </group>
                                </group>
                                <group string="Feedback &amp; Impact">
                                    <field name="feedback" widget="text"/>
                                    <field name="impact" widget="text"/>
                                    <field name="satisfaction_rating"/>
                                </group>
                            </page>
                            <page string="SEO">
                                <group>
                                    <field name="website_meta_title"/>
                                    <field name="website_meta_description"/>
                                    <field name="website_meta_keywords"/>
                                    <field name="keywords"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_acara_post_tree" model="ir.ui.view">
            <field name="name">acara.post.tree</field>
            <field name="model">acara.post</field>
            <field name="arch" type="xml">
                <list string="Acara Dosen">
                    <field name="name"/>
                    <field name="blog_id"/>
                    <field name="role"/>
                    <field name="event_date"/>
                    <field name="location"/>
                    <field name="organizer"/>
                    <field name="status"/>
                    <field name="website_published" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <record id="view_acara_post_kanban" model="ir.ui.view">
            <field name="name">acara.post.kanban</field>
            <field name="model">acara.post</field>
            <field name="arch" type="xml">
                <kanban default_group_by="status">
                    <field name="name"/>
                    <field name="blog_id"/>
                    <field name="role"/>
                    <field name="event_date"/>
                    <field name="location"/>
                    <field name="status"/>
                    <field name="cover_image"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-if="record.cover_image.raw_value" t-att-src="kanban_image('acara.post', 'cover_image', record.id.raw_value)" class="o_kanban_image"/>
                                    <span t-else="" class="fa fa-picture-o"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong><field name="name"/></strong>
                                    <div><field name="blog_id"/></div>
                                    <div><field name="role"/></div>
                                    <div><field name="event_date"/></div>
                                    <div><field name="location"/></div>
                                    <div class="o_kanban_tags_section">
                                        <span class="badge" t-attf-class="badge-{{record.status.raw_value == 'completed' and 'success' or record.status.raw_value == 'ongoing' and 'warning' or record.status.raw_value == 'upcoming' and 'secondary' or 'danger'}}">
                                            <field name="status"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Acara Type Views -->
        <record id="view_acara_type_form" model="ir.ui.view">
            <field name="name">acara.type.form</field>
            <field name="model">acara.type</field>
            <field name="arch" type="xml">
                <form string="Jenis Acara">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="color" widget="color_picker"/>
                            </group>
                        </group>
                        <group string="Deskripsi">
                            <field name="description" widget="text" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_acara_type_tree" model="ir.ui.view">
            <field name="name">acara.type.tree</field>
            <field name="model">acara.type</field>
            <field name="arch" type="xml">
                <list string="Jenis Acara" default_order="sequence">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="description"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Action and Menu -->
        <record id="action_acara_blog" model="ir.actions.act_window">
            <field name="name">Kategori Acara</field>
            <field name="res_model">acara.blog</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_acara_post" model="ir.actions.act_window">
            <field name="name">Acara Dosen</field>
            <field name="res_model">acara.post</field>
            <field name="view_mode">list,form,kanban</field>
        </record>

        <record id="action_acara_type" model="ir.actions.act_window">
            <field name="name">Jenis Acara</field>
            <field name="res_model">acara.type</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>