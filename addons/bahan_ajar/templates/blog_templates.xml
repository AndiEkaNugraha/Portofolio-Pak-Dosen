<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="blog_post_metadata" inherit_id="website_blog.blog_post_template">
        <xpath expr="//div[hasclass('o_wblog_post_title')]" position="after">
            <div t-if="blog_post.file_type or blog_post.topic" class="o_wblog_post_metadata mt-3 mb-4">
                <div class="alert alert-light">
                    <div class="row g-3">
                        <div t-if="blog_post.file_type" class="col-auto">
                            <span class="d-inline-flex align-items-center">
                                <i class="fa fa-file text-primary me-2"></i>
                                <span t-esc="blog_post.file_type"/>
                            </span>
                        </div>
                        <div t-if="blog_post.topic" class="col-auto">
                            <span class="d-inline-flex align-items-center">
                                <i class="fa fa-tag text-info me-2"></i>
                                <span t-esc="blog_post.topic"/>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>