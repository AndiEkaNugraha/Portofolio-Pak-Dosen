<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Main Menu -->
        <record id="menu_pengabdian_main" model="ir.ui.menu">
            <field name="name">Pengabdian Masyarakat</field>
            <field name="sequence">35</field>
        </record>

        <!-- Pengabdian Blog Menu dan Actions -->
        <record id="action_pengabdian_blog" model="ir.actions.act_window">
            <field name="name">Kategori Pengabdian</field>
            <field name="res_model">pengabdian.blog</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Buat kategori pengabdian pertama Anda!
                </p>
                <p>
                    Kategori pengabdian membantu mengorganisir kegiatan berdasar bidang, cakupan, dan sumber dana.
                </p>
            </field>
        </record>

        <!-- Pengabdian Post Menu dan Actions -->
        <record id="action_pengabdian_post" model="ir.actions.act_window">
            <field name="name">Kegiatan Pengabdian</field>
            <field name="res_model">pengabdian.post</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tambahkan kegiatan pengabdian pertama Anda!
                </p>
                <p>
                    Kelola daftar kegiatan pengabdian masyarakat seperti pelatihan, penyuluhan, dan pemberdayaan.
                </p>
            </field>
        </record>

        <record id="menu_pengabdian_post" model="ir.ui.menu">
            <field name="name">Daftar Kegiatan Pengabdian</field>
            <field name="parent_id" ref="menu_pengabdian_main"/>
            <field name="action" ref="action_pengabdian_post"/>
            <field name="sequence">10</field>
        </record>

        <!-- Separate actions for different pengabdian types -->
        <record id="action_pengabdian_education" model="ir.actions.act_window">
            <field name="name">Pengabdian Pendidikan</field>
            <field name="res_model">pengabdian.post</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('pengabdian_type_id.code', '=', 'PEND')]</field>
            <field name="context">{'default_pengabdian_type_id': ref('pengabdian_type_pendidikan')}</field>
        </record>

        <record id="action_pengabdian_health" model="ir.actions.act_window">
            <field name="name">Pengabdian Kesehatan</field>
            <field name="res_model">pengabdian.post</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('pengabdian_type_id.code', '=', 'KES')]</field>
            <field name="context">{'default_pengabdian_type_id': ref('pengabdian_type_kesehatan')}</field>
        </record>

        <record id="action_pengabdian_agriculture" model="ir.actions.act_window">
            <field name="name">Pengabdian Pertanian</field>
            <field name="res_model">pengabdian.post</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('pengabdian_type_id.code', '=', 'TANI')]</field>
            <field name="context">{'default_pengabdian_type_id': ref('pengabdian_type_pertanian')}</field>
        </record>

        <record id="action_pengabdian_technology" model="ir.actions.act_window">
            <field name="name">Pengabdian Teknologi</field>
            <field name="res_model">pengabdian.post</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('pengabdian_type_id.code', '=', 'TEK')]</field>
            <field name="context">{'default_pengabdian_type_id': ref('pengabdian_type_teknologi')}</field>
        </record>

        <!-- Configuration Menu -->
        <record id="menu_pengabdian_config" model="ir.ui.menu">
            <field name="name">Konfigurasi</field>
            <field name="parent_id" ref="menu_pengabdian_main"/>
            <field name="sequence">20</field>
        </record>

        <record id="menu_pengabdian_blog_config" model="ir.ui.menu">
            <field name="name">Kategori Pengabdian</field>
            <field name="parent_id" ref="menu_pengabdian_config"/>
            <field name="action" ref="action_pengabdian_blog"/>
            <field name="sequence">10</field>
        </record>

        <!-- Master Data Actions -->
        <record id="action_pengabdian_type" model="ir.actions.act_window">
            <field name="name">Jenis Pengabdian</field>
            <field name="res_model">pengabdian.type</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tambahkan jenis pengabdian baru!
                </p>
                <p>
                    Kelola jenis-jenis kegiatan pengabdian seperti Pendidikan, Kesehatan, Pertanian, Teknologi.
                </p>
            </field>
        </record>

        <record id="action_pengabdian_partner" model="ir.actions.act_window">
            <field name="name">Mitra Kerjasama</field>
            <field name="res_model">pengabdian.partner</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tambahkan mitra kerjasama baru!
                </p>
                <p>
                    Kelola daftar mitra seperti institusi, perusahaan, masyarakat, dan organisasi.
                </p>
            </field>
        </record>

        <!-- Master Data Menus -->
        <record id="menu_pengabdian_type" model="ir.ui.menu">
            <field name="name">Jenis Pengabdian</field>
            <field name="parent_id" ref="menu_pengabdian_config"/>
            <field name="action" ref="action_pengabdian_type"/>
            <field name="sequence">20</field>
        </record>

        <record id="menu_pengabdian_partner" model="ir.ui.menu">
            <field name="name">Mitra Kerjasama</field>
            <field name="parent_id" ref="menu_pengabdian_config"/>
            <field name="action" ref="action_pengabdian_partner"/>
            <field name="sequence">30</field>
        </record>

    </odoo>